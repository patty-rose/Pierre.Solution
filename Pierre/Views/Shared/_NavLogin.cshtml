@model LoginViewModel

@if (User.Identity.IsAuthenticated)
  {
    @using (Html.BeginForm("LogOff", "Account"))
    {
      @Html.Label($"Hello {@User.Identity.Name}!")
      <input class = "btn btn-secondary" type="submit" class="btn btn-default" value="Log out" />
      @Html.ActionLink("Account", "Index", "Account")
    }
  }
  else
  {
    @using (Html.BeginForm("Login","Account",FormMethod.Post))
    {
      @Html.LabelFor(m => m.Email)
      @Html.TextBoxFor(m => m.Email)

      @Html.LabelFor(m => m.Password)
      @Html.PasswordFor(m => m.Password)

      <input class = "btn btn-secondary" type="submit" value="Log in" class="btn btn-default" />
      @Html.ActionLink("Account", "Index", "Account")
    }
  }